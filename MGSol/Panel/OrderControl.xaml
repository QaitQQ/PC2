<UserControl x:Class="MGSol.Panel.OrdersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MGSol.Panel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="950">


    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border  CornerRadius="3"  BorderThickness="2">
        <StackPanel Grid.Row="0" Orientation="Horizontal"  Margin="2">
            <Button Margin="2" Height="35" Width="35" Content="↺" Background="#FF64B067" FontSize="24" FontFamily="Arial" FontWeight="Bold" Click="Fill_VOrders"  HorizontalAlignment="Left"/>
            <Button Margin="2"  Height="35" Width="35" Content="📝;" Background="BurlyWood" FontSize="24" FontFamily="Arial" FontWeight="Bold" Click="Button_List"/>
            <ComboBox  Margin="2" Height="35" x:Name="StatusBox" SelectionChanged="StatusBox_SelectionChanged"></ComboBox>
             <Label Content="Распечатать Акты:" VerticalAlignment="Center"></Label>
             <Border BorderBrush="#FF514141" BorderThickness="1" CornerRadius="3">
            <StackPanel Orientation="Horizontal">
                <ItemsControl x:Name="PrintActBtnStack">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="3" Height =" 35"  Content="{Binding Name}" Click="GetActClick"></Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Button HorizontalAlignment="Right" Content="+" Background="Green" FontSize="22" FontFamily="Arial" FontWeight="Bold" Click="Browser_hide"/>

      
            <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="BCol" Width="200"/>
            </Grid.ColumnDefinitions>
            <Border  Grid.Row="1"  CornerRadius="3" BorderThickness="2">
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility ="Auto" Visibility="Visible">
                <StackPanel Grid.Row="1">
                    <ItemsControl x:Name="OrderStack" Background="Gainsboro" FontFamily="Arial" Width ="800" HorizontalAlignment="Left">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <HeaderedContentControl Header="{Binding Path=Key}" FontFamily="Arial" >
                                    <ItemsControl ItemsSource="{Binding Path=.}" Background="Gray" Width ="800" HorizontalAlignment="Left">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="2" Width ="800"  HorizontalAlignment="Left" Background="Cornsilk">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                        <Border BorderBrush="#FF514141" BorderThickness="1" CornerRadius="3">
                                                    <Grid Grid.Row="0">
                                                        <StackPanel HorizontalAlignment="Left">
                                                            <TextBlock Margin="3" Text="{Binding APISetting.Name}"></TextBlock>
                                                                <ListBox Grid.Row="1" ItemsSource ="{Binding Items}" MouseDoubleClick="ListBox_MouseDoubleClick" />
                                                                <StackPanel Background="DarkSalmon" Margin ="3"  Orientation="Horizontal" Width="650" HorizontalAlignment="Left">
                                                                <TextBlock Margin="3" Text="{Binding Id}"></TextBlock>
                                                                <TextBlock Margin="3" Text="{Binding Date}"></TextBlock>
                                                                <TextBlock Margin="3" Text="{Binding DeliveryDate}"></TextBlock>
                                                            </StackPanel>

                                                            <StackPanel  Margin="3">
                                                                <Button Margin="3" Content="📦" Background="Green"  Click="Ship_Click" HorizontalAlignment="Left"></Button>
                                                                <Button Margin="3"  Content="🏷" Click="Label_Click" Background="#FFF5C150"  HorizontalAlignment="Left"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                        </Border>

                                                    </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </HeaderedContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Control.Margin" Value="5"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding APISetting.Name}"></TextBlock>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ItemsControl.GroupStyle>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
            </Border>
            <WebBrowser x:Name="Browser" Grid.Column="1" ></WebBrowser>
       
        </Grid>
        
    </Grid>

</UserControl>
