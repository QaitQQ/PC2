<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pwa.Pages.Controls.ItemControl"
             WidthRequest="300">
    <Frame  CornerRadius="3" BorderColor="Black" WidthRequest="300" HeightRequest="200">
        <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="LabelName" Background="White"></Label>
            <Label x:Name="LabelPrice"></Label>
                <Frame CornerRadius="3" Background="Gray">

                    <Label x:Name="LabelDescription"></Label>
                </Frame>
          
        </VerticalStackLayout>
        </ScrollView>
    </Frame>
</ContentView>
